        </NewTag>
      </Transform>
      <Transform>
        <NewTag>
          <TagName>p</TagName>
          <Attributes>
            <Attribute>
              <Name>style</Name>
              <Value>secondpara</Value>
            </Attribute>
          </Attributes>
        </NewTag>
      </Transform>
    </Transformations>
  </Tag>

  <Tag>
    <ContextType>All</ContextType>
    <TagName>div</TagName>
    <Attributes>
      <Attribute>
        <Name>class</Name>
        <Value>*</Value>
      </Attribute>
    </Attributes>
    <Transformations>
      <Transform>
        <NewTag>
          <TagName>p</TagName>
          <Attributes>
            <Attribute>
              <Name>style</Name>
              <Value>secondpara</Value>
            </Attribute>
          </Attributes>
        </NewTag>
      </Transform>
    </Transformations>
  </Tag>
