<?xml version="1.0" encoding="utf-8"?>
<TransformationRules>
  <Tag>
    <ContextType>All</ContextType>
    <TagName>p</TagName>
    <Attributes>
      <Attribute>
        <Name>style</Name>
        <Value></Value>
      </Attribute>
    </Attributes>
    <Transformations>
      <Transform>
        <Occurrence>1</Occurrence>
        <NewTag>
          <TagName>p</TagName>
          <Attributes>
            <Attribute>
              <Name>style</Name>
              <Value>firstpara</Value>
            </Attribute>
          </Attributes>
        </NewTag>
      </Transform>
      <Transform>
        <NewTag>
          <TagName>p</TagName>
          <Attributes>
            <Attribute>
              <Name>style</Name>
              <Value>secondpara</Value>
            </Attribute>
          </Attributes>
        </NewTag>
      </Transform>
    </Transformations>
  </Tag>
  <Tag>
    <ContextType>All</ContextType>
    <TagName>p</TagName>
    <Attributes>
      <Attribute>
        <Name>style</Name>
        <!-- this is actually used as a passage title and that is why i have a separate rule in case we 
    want to handle this differently in the future.-->
        <Value>text-decoration:underline;</Value>
      </Attribute>
    </Attributes>
    <Transformations>
      <Transform>
        <Occurrence>1</Occurrence>
        <NewTag>
          <TagName>p</TagName>
          <Attributes>
            <Attribute>
